<?xml version="1.0" encoding="UTF-8"?>
<config> 
    <modules>
        <MatthewAnstey_ShowBlocks>
            <!-- The version of our module, starting at 0.0.1 -->
            <version>0.0.1</version>
        </MatthewAnstey_ShowBlocks>

    </modules>
    <global>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <matthewanstey_showblocks>
                        <class>MatthewAnstey_ShowBlocks_Model_Observer</class>
                        <method>wrapHtml</method>
                    </matthewanstey_showblocks>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
        <helpers>
            <showblocks>
                <class>MatthewAnstey_ShowBlocks_Helper</class>
            </showblocks>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <matthewanstey_showblocks>
                    <file>showblocks_layout.xml</file>
                </matthewanstey_showblocks>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <matthewanstey>
                                            <title>Matthew Anstey - All</title>
                                        </matthewanstey>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>